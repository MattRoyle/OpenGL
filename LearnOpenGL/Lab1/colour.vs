#version 450 corelayout(location = 0) in vec3 aPos; // position has attribute position 0layout (location = 1) in vec3 aNormal;out vec3 FragPos;out vec3 Normal;uniform mat4 model;uniform mat4 view;uniform mat4 projection;void main(){	FragPos = vec3(model * vec4(aPos, 1.0));//convert the to world space fragment positions	Normal = aNormal;	gl_Position = projection * view * model * vec4(aPos, 1.0);}