#version 450 coreout vec4 FragColour;in vec3 ourColour; // we set this variable in the OpenGL codein vec2 TexCoord;uniform sampler2D texture1;//GLSL built in datatype for textureuniform sampler2D texture2;uniform float mixValue;void main(){	vec2 tex2Coord = vec2(-TexCoord.x, TexCoord.y);	FragColour = mix(texture(texture1, TexCoord),					texture(texture2, tex2Coord), mixValue);}